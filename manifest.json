{
  "manifest_version": 3,
  "name": "TTS with Kokoro",
  "version": "1.0",
  "description": "Use Kokoro TTS",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "notifications",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "styles.css"
      ],
      "js": [
        "tts.umd.js",
        "content.js"
      ]
    }
  ],
  "commands": {
    "tts_with_kokoro": {
      "suggested_key": {
        "default": "Alt+T"
      },
      "description": "Use Kokoro TTS"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}